@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "List of Users";
}

<div class="table-responsive mt-5">
    <table class="table table-striped table-bordered border-light">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">UserName</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Role</th>
@*            <th scope="col">Last activity</th>
            <th scope="col">Status (active or banned (
                https://demos.pixinvent.com/modern-html-admin-template/html/ltr/vertical-menu-template/page-users-list.html#))</th>*@
            <th scope="col">Operations</th>
        </tr>
        </thead>
        <tbody>            
            <div class="row">
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a class="link-primary" asp-action="Details" asp-route-id="@item.Id">@item.Username</a>
                    </td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Role</td>
                        <td>
                            <div style="display: flex;">
                                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <input type="hidden" name="delete" value="delete" />
                                <button type="submit" class="btn btn-outline-danger ms-1"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </div>
        </tbody>
    </table>
</div>